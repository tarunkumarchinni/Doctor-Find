<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tarunkumar.doctorfind.MainActivity">

    <EditText
        android:id="@+id/et_username"
        android:hint="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />
    <EditText
        android:layout_below="@+id/et_username"
        android:id="@+id/et_pass"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/bt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#1690ff"

        android:text="login"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/et_pass"
        android:layout_centerHorizontal="true" />
    <!-- <TextView
         android:layout_below="@+id/bt"
         android:id="@+id/vt"
         android:gravity="center"
         android:textColor="#000000"
         android:text="OR"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
 -->

    <Button
        android:id="@+id/bt_signup"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:text="signup"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/tv_username"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/tv_username"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:layout_above="@+id/bt_docsign"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_docsign"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:text="doctors signup"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_below="@+id/bt_docsign"
        android:id="@+id/tv_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>
